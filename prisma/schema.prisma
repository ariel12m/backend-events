generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int      @id @default(autoincrement())
  name            String
  email           String   @unique
  password        String
  cedula          String?
  phone           String?
  address         String?
  licenseNumber   String?
  vehicle         String?
  createdAt       DateTime @default(now())

  events          Event[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  date        DateTime?
  createdAt   DateTime @default(now())
  sensorData  Json?
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
